{
    "compilerOptions": {
        "target": "es6",
        "outFile": "dist/kittens.js",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "removeComments": true,
        "strictNullChecks": true
    },
    "filesGlob": "src/*.ts"
}
